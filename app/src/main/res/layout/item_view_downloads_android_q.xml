<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:weightSum="3"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp"
        android:layout_weight="1.1"
        app:cardBackgroundColor="#94CAF4CB"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/item_view_d_android_q_thumnail"
            android:layout_height="80dp"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_weight="0.6"
        android:text="0000.mp4"
        android:textSize="16dp"
        android:fontFamily="@font/nunito"
        android:layout_marginEnd="4dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:id="@+id/item_view_d_android_q_name"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/item_view_downlaod_android_q_share"
        android:layout_weight="1.3"
        android:src="@drawable/black_share"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>