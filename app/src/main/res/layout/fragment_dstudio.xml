<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout

        android:id="@+id/imgBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/about_us_bg"
        android:orientation="horizontal"
        android:scaleType="fitXY">

    </LinearLayout>


    <ImageView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:src="@drawable/dlogo"
        android:text="About Us"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textappname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="About Us"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textappname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38pt"

        android:gravity="center"
        android:text="Instagram Profile"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20pt"
        android:gravity="center"
        android:text="@string/hyperlink"
        android:textColorLink="@color/accent_yellow"


        android:textSize="14dp" />

    <TextView
        android:id="@+id/textInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10pt"

        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:text="Behance"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInstagram"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20pt"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20pt"
        android:autoLink="web"
        android:gravity="center"
        android:text="@string/hyperlinkBehance"
        android:textColor="@color/md_green_50"
        android:textColorLink="@color/accent_yellow" />


    <LinearLayout
        android:id="@+id/container_whatsApp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginEnd="10pt"
        android:layout_marginBottom="10pt"
        android:background="@drawable/small_card_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/whats_app" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Contact us\nWhatsApp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_call"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10pt"
        android:layout_marginTop="10pt"
        android:layout_marginEnd="10pt"
        android:layout_marginBottom="10pt"
        android:background="@drawable/small_card_bg"
        android:orientation="vertical">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_call_24"
            app:tint="@color/accent_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Contact us\nOn Phone Call"
            android:textColor="@color/black" />
    </LinearLayout>
</RelativeLayout>